<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:skin="http://schemas.android.com/android/skin"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:background="@color/common_bg_light"
              android:orientation="horizontal"
              android:padding="5dp"
              skin:enable="true">

    <ImageView
            android:id="@+id/img_news_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/prj_default_pic_big"/>

    <RelativeLayout
            android:id="@+id/layout_description"
            style="@style/LibMatchMatch.Vertical">

        <TextView
                android:id="@+id/tv_title_center"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="今日头条样式今日头条样式今日头条样式今日头条样式"
                android:textColor="@color/common_tv_dark"
                android:textSize="@dimen/TextLarge"/>


        <TextView
                android:id="@+id/tv_news_source"
                style="@style/LibWrapWrap"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/prj_btn_round_transparent_bg"
                android:ellipsize="end"
                android:maxLength="8"
                android:maxLines="1"
                android:padding="5dp"
                android:text="来源字段"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/TextListSubTitle"/>

        <ImageView
                android:id="@+id/news_date_icon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@id/tv_title_center"
                android:layout_alignTop="@id/tv_news_date"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ic_news_time"/>

        <TextView
                android:id="@+id/tv_news_date"
                style="@style/LibWrapWrap"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/news_date_icon"
                android:text="2016-03-08 "
                android:textColor="@color/common_tv_grey"
                android:textSize="@dimen/TextListSubTitle"/>

    </RelativeLayout>

</LinearLayout>